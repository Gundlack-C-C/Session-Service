    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Aktuelle Datei",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}"
        },
        {
            "name": "Server",
            "type": "python",
            "request": "launch",
            "program": "${cwd}/app/server.py",
            "console": "integratedTerminal",
            "args": [
                "--l",
                "./.log/server_debug.log",
                "--production",
            ],
            "cwd": "${workspaceFolder}/app"
        }
    ]
}